<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content">
<ImageView
    android:layout_width="match_parent"
    android:layout_marginTop="20dp"
    android:src="@drawable/carshadow"
    android:layout_height="130dp">
</ImageView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="0dp"
            android:fontFamily="@font/poppins_bold"
            android:gravity="center"
            android:text="YAY"
            android:padding="0dp"
            android:shadowColor="@color/TransparentGrey"
            android:shadowDx="2"
            android:shadowDy="3"
            android:shadowRadius="12"
            android:textColor="#ffffff"
            android:textSize="42dp">

        </TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:shadowColor="@color/TransparentGrey"
            android:shadowDx="2"
            android:shadowDy="3"
            android:shadowRadius="12"
            android:text="YOUR RIDE ON YOUR WAY "
            android:textColor="#ffffff"
            android:textSize="16dp">

        </TextView>
    </LinearLayout>
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:padding="16dp">
        <Button
            android:id="@+id/btn_phone_sign_in"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:textColor="@color/chilli"
            android:text="Continue With Phone"
            android:fontFamily="@font/poppins"
            android:drawableStart="@drawable/ic_phone_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>
        <Button
            android:id="@+id/btn_google_sign_in"
            android:padding="10dp"
            android:layout_marginBottom="10dp"
            android:background="#ffffff"
            android:textColor="@color/chilli"
            android:text="Continue With Google"
            android:fontFamily="@font/poppins"
            android:drawableStart="@drawable/ic_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </Button>

    </LinearLayout>

</RelativeLayout>